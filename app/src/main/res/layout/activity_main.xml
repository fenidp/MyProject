<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/idmaskot"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/maskot"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:text="Login"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="321dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/login"
        android:padding="40dp"
        android:id="@+id/ly1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/Group1"
            android:hint="Username"
            android:paddingLeft="70dp"
            android:id="@+id/username"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/Group2"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:paddingLeft="70dp"
            android:id="@+id/password"/>
    </LinearLayout>

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sign in"
    android:layout_below="@id/ly1"
    android:layout_centerHorizontal="true"
    android:background="@drawable/button"
    android:width="320dp"
    android:textSize="22dp"
    android:id="@+id/btnsingin"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btnsingin"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have account?"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="18dp"
            android:textColor="@color/blue"/>

    </LinearLayout>

</RelativeLayout>